<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tesis.View.Login">
    
    <RelativeLayout VerticalOptions="Center" HorizontalOptions="Center">
        
        <Grid VerticalOptions="FillAndExpand" BackgroundColor="#2887DE">
            
            <Image x:Name="background" Source="tecini.png" 
               AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" 
               VerticalOptions="FillAndExpand" Aspect="AspectFill" IsVisible="true" 
               HeightRequest="850" Opacity="0.3"/>
            
            <Grid RowSpacing="5" VerticalOptions="Center">
                <Image x:Name="main_backgroundd" Source="ini.png" IsVisible="true" Aspect="AspectFill" 
                   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                   HeightRequest="300" Margin="0,0,0,120"/>
            </Grid>
            <StackLayout Margin="0,300,0,0">
                <!-- Se aplica un Margin de 400 unidades en la parte superior -->
                <Button ImageSource="icongoogle.png" Text="Iniciar Sesión con Google" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" CornerRadius="20"/>
            </StackLayout>
        </Grid>
    </RelativeLayout>
</ContentPage>